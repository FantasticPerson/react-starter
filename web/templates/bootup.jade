doctype html
html
    head
        meta(charset="utf-8")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(name="format-detection", content="telephone=no, email=no")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

        title= htmlWebpackPlugin.options.title
        //favicon
        if htmlWebpackPlugin.files.favicon
            link(rel="shortcut icon",  href=htmlWebpackPlugin.files.favicon + '?v=' + htmlWebpackPlugin.options.version, sizes="16x16")

        //headerEmbedJs
        if htmlWebpackPlugin.options.headerEmbedJs
            script
                != htmlWebpackPlugin.options.headerEmbedJs

        //css
        each cssChunkName in htmlWebpackPlugin.files.css
            link(href=cssChunkName, rel="stylesheet")

    body
        #react-root
        //js
        each jsChunkName in htmlWebpackPlugin.files.js
            script(src=jsChunkName, defer)
