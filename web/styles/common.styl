.tr-center-position
  display flex
  flex-direction row
  justify-content center
  align-items center

.tr-common-button
  width 74px
  height 32px
  border-radius 5px
  border none
  font-size 15px
  color #fff

.tr-common-button-gray
  @extend .tr-common-button
  background-color rgb(120, 121, 121)

.tr-common-button-blue
  @extend .tr-common-button
  background-color rgb(36, 141, 193)

.arrow {
  display: block;
  width: 96px;
  height: 30px;
  background: url(./icon/arrow.jpg) 0 0 no-repeat;
}